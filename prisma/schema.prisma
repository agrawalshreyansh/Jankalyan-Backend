generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Query {
  id          String    @id @default(uuid())
  category    String
  question    String
  answer      String
  location    String?
  ipAddress   String?
  deviceInfo  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  dateOfBirth DateTime?
  fullName    String
  gender      String?
  phoneNumber String
  city        String?
  state       String?
}

model JaapCount {
  id         String   @id @default(uuid())
  jaapCount  Int      @default(1)
  location   String?
  ipAddress  String?
  deviceInfo String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deviceId   String   @unique
  city       String?
  name       String?
  phone      String?
}

model AppSettings {
  id               String   @id @default("singleton")
  description      String
  paymentQR        String
  bankName         String
  ifscCode         String
  accountNumber    String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  title            String?
  videoUrl         String?
  TransactionNote  String?
  upiId            String?
  descriptionHindi String?
  titleHindi       String?
  targetAmount     Float?
  collectedAmount  Float?
  totalAmount      Float?
}

model AdminUser {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String?
  fullName  String?
  role      AdminRole
  addedBy   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum AdminRole {
  ADMIN
  SUPERADMIN
}

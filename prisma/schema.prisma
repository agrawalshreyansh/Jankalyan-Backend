
generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Query {
  id              String   @id @default(uuid())
  phoneNumber     String   
  fullName        String
  dateOfBirth     DateTime?
  location        String?
  gender          String?
  category        String
  question        String
  answer          String
  ipAddress       String?
  deviceInfo      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model JaapCount {
  id          String   @id @default(uuid())
  deviceId    String   @unique
  jaapCount   Int      @default(1)
  location    String?
  ipAddress   String?
  deviceInfo  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AppSettings {
  id             String   @id @default("singleton")
  description    String
  paymentQR      String
  bankName       String
  ifscCode       String
  accountNumber  String
  videoUrl       String?
  title          String?
  upiId          String?
  TransactionNote String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum AdminRole {
  ADMIN
  SUPERADMIN
}

model AdminUser {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String?
  fullName  String?
  role      AdminRole 
  addedBy   String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}